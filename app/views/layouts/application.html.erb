<!DOCTYPE html>
<html>
  <head>
    <title>SRS App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">
    <%= render 'layouts/header' %>
    <% flash.each do |type, contents| %>
      <%= content_tag :div, contents, class: "alert alert-#{type}" %>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
